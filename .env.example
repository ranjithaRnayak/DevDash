# DevDash Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Backend API Configuration
# ============================================
VITE_API_BASE_URL=http://localhost:5000/api

# ============================================
# Authentication Mode Toggle
# ============================================
# Set to 'true' to use PAT token authentication (no login page)
# Set to 'false' to use dual auth system (OAuth + email/password login)
VITE_USE_PAT_TOKEN=true

# ============================================
# Azure DevOps Configuration (for PAT mode)
# ============================================
VITE_AZDO_PAT=your_azure_devops_pat_token
VITE_AZDO_ORG_URL=https://dev.azure.com/your-org
VITE_AZDO_PROJECT=your-project-name
VITE_AZDO_REPOS=repo1,repo2
VITE_AZDO_PIPELINES=pipeline1,pipeline2

# ============================================
# GitHub Configuration (for PAT mode)
# ============================================
VITE_GITHUB_PAT=your_github_pat_token
VITE_GITHUB_OWNER=your-github-username-or-org
VITE_GITHUB_REPO=your-repo-name

# ============================================
# PR Configuration
# ============================================
VITE_PR_APPROVERS=email1@example.com,email2@example.com
VITE_PR_TEAM=team@example.com

# ============================================
# OAuth Configuration (for dual auth mode)
# Required only when VITE_USE_PAT_TOKEN=false
# ============================================
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id
VITE_GITHUB_CLIENT_ID=your_github_oauth_app_client_id

# ============================================
# SonarQube Configuration (optional)
# ============================================
# VITE_SONARCUBE_URL=https://sonarqube.example.com
# VITE_SONARCUBE_REPO=your-project-key
# VITE_SONAR_TOKEN=your_sonarqube_token

# ============================================
# App Environment
# ============================================
VITE_APP_ENV=dev
