# DevDash Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Backend API Configuration
# ============================================
VITE_API_BASE_URL=http://localhost:5000/api

# ============================================
# Authentication Mode Toggle
# ============================================
# Set to 'true' to use PAT token authentication (no login page)
# Set to 'false' to use Microsoft Entra ID login
VITE_USE_PAT_TOKEN=true

# ============================================
# Microsoft Entra ID Configuration
# Required when VITE_USE_PAT_TOKEN=false
# ============================================
VITE_ENTRA_CLIENT_ID=your_entra_client_id
VITE_ENTRA_TENANT_ID=your_entra_tenant_id
VITE_ENTRA_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_ENTRA_AUTHORIZE_URL=https://login.microsoftonline.com
VITE_ENTRA_SCOPES=openid,profile,email,User.Read

# ============================================
# GitHub Integration Configuration
# GitHub is an OPTIONAL integration (not authentication)
# Users can connect via OAuth or PAT
# ============================================

# Enable/disable GitHub connection methods
VITE_GITHUB_OAUTH_ENABLED=true
VITE_GITHUB_PAT_ENABLED=true

# GitHub Enterprise URLs (update these for your enterprise instance)
# For GitHub.com, use the defaults. For Enterprise, use your instance URLs.
VITE_GITHUB_API_URL=https://github.yourcompany.com/api/v3
VITE_GITHUB_AUTHORIZE_URL=https://github.yourcompany.com/login/oauth/authorize

# GitHub OAuth App Configuration
VITE_GITHUB_CLIENT_ID=your_github_oauth_app_client_id
VITE_GITHUB_REDIRECT_URI=http://localhost:5173/auth/github/callback
VITE_GITHUB_SCOPES=read:user,repo

# GitHub Repository Info
VITE_GITHUB_OWNER=your-github-username-or-org
VITE_GITHUB_REPO=your-repo-name

# GitHub PAT (for PAT connection method)
VITE_GITHUB_PAT=your_github_pat_token

# ============================================
# Azure DevOps Configuration (for PAT mode)
# ============================================
VITE_AZDO_PAT=your_azure_devops_pat_token
VITE_AZDO_ORG_URL=https://dev.azure.com/your-org
VITE_AZDO_PROJECT=your-project-name
VITE_AZDO_REPOS=repo1,repo2
VITE_AZDO_PIPELINES=pipeline1,pipeline2

# ============================================
# PR Configuration
# ============================================
VITE_PR_APPROVERS=email1@example.com,email2@example.com
VITE_PR_TEAM=team@example.com

# ============================================
# SonarQube Configuration
# For private projects, you need a User Token with 'Browse' permission
# ============================================
# SonarQube server URL (your enterprise instance)
VITE_SONARCUBE_URL=https://sonarqube.yourcompany.com

# Project key (found in SonarQube project settings)
VITE_SONARCUBE_REPO=your-project-key

# User token for authentication (required for private projects)
# Generate at: SonarQube > My Account > Security > Generate Token
# Token needs 'Browse' permission on the project
VITE_SONAR_TOKEN=your_sonarqube_user_token

# ============================================
# App Environment
# ============================================
VITE_APP_ENV=dev
